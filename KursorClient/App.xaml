<Application x:Class="KursorClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BgColor">#11110A</Color>
            <Color x:Key="Accent">#FFB800</Color>

            <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

            <!-- Универсальный стиль для всех окон: если окно явно не переопределяет Background,
                 оно получит наш тёмный фон -->
            <Style TargetType="Window">
                <Setter Property="Background" Value="{DynamicResource BgBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="Margin" Value="6"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
